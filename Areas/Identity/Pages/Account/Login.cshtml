@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* Custom CSS for styling */
        

        
        /* Style the submit button */
        #login-submit {
            background-color: orange;
            border: none;
        }

            #login-submit:hover {
                background-color: darkorange;
            }
    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/APPR6312_Part1_1_.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-md-4">
            <h2 class="text-center" style="margin-bottom: 80px">Disaster Relief Foundation</h2>
            <section>
                <form id="account" method="post">
                    <h3 class="text-center">Login </h3>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating" >
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="margin-top: 20px">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                   @* <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>*@
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="margin-top: 20px" > Log in</button>
                    </div>
                    <div>
                        @*<p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>*@
                        @*<p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>*@
                    
                    </div>
                </form>
            </section>
        </div>
    
    </div>
</body>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
